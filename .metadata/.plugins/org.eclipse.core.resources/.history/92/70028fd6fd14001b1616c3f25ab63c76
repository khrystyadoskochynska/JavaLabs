package com.Khryst.lab1;

/**
 * Interval class with methods of operations with intervals
 * @author Khrystya Doskochynska
 */
public class Interval {
	/**
	 * 
	 * @param a bottom value of interval
	 * @param b bottom value of interval 
	 */
	public int a, b, lenFib;
	
	public Interval(int a, int b, int lenFib) {
		super();
		this.a = a;
		this.b = b;
		this.lenFib = lenFib;
	}

	public Interval() {
		super();
	}
	
	/**
	 * Output odd number by increase
	 */
    public void oddIncrease() {
		System.out.println("Odd numbers by increase");
    	for(int i=a; i<=b; i++ )
		{
			if(i%2 != 0) {
				System.out.println(i);
			}
		}
	}
    
    public void evenDecrease() {
		System.out.println("Even numbers by decrease");
    	for(int i=b; i>=a; i-- )
		{
			if(i%2 == 0) {
				System.out.println(i);
			}
		}
	}
    
    public int sumOdd() {
    	
    	int sum = 0;
    	for(int i=a; i<=b; i++ )
		{
			if(i%2 != 0) {
				System.out.println(i);
				sum = sum+i;
			
			}
		}
    	return sum;
    }
    
 public int sumEven() {
    	
    	int sum = 0;
    	for(int i=b; i>=a; i-- )
		{
			if(i%2 == 0) {
				System.out.println(i);
				sum = sum+i;
			
			}
		}
    	return sum;
    }
    
    public double percentageOddFib() {
    	int prev = b-1;
    	int curr = b;
    	int next;
    	int qtyOdd = 1;
    	for(int i=1; i<=lenFib-2; i++) {
    		next = prev+curr;
    		if(next%2 != 0) {
				System.out.println(next);
				qtyOdd += 1;
			}
    		prev = curr;
    		curr = next; 
    	}
    	
		return (double)qtyOdd/lenFib*100 ;
	}
    
    public double persentageEven() {
		return 0;
	}
    
    
    public double percentageEvenFib() {
    	int prev = b-1;
    	int curr = b;
    	int next;
    	int qtyEven = 1;
    	for(int i=1; i<=lenFib-2; i++) {
    		next = prev+curr;
    		if(next%2 == 0) {
				System.out.println(next);
				qtyEven += 1;
			}
    		prev = curr;
    		curr = next; 
    	}
    	
		return (double)qtyEven/lenFib*100 ;
	}
    
   
}
